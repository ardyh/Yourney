extends ../layout

block content
  .ctn-header
    section.hero.brdr-rds20.city-background
      .hero-body
        .container.ctn-home.txt-cntr
          h1.title #AntiWacana
          h2.subtitle Sudah ga zaman lagi wacana doang.
            br
            | Rencanakan sekarang dan berangkat setelahnya
          .field.has-addons.has-addons-centered
            p.control(style=`width:80%`)
              input.input(placeholder='Cari....')
            p.control
              a.button.is-info Go.

  .home-wrapper
    .columns(style=`margin-bottom:40px`)

      .column
        .columns
          column
            img.image.is-96x96(src='/assets/img/tap.png')
          column
            p.margin-lft.title-card(style=`margin-bottom:10px`) Mudah
            p.margin-lft(style=`font-size:12px`) Buat travel plan kamu sendiri
              br
              | atau sesuaikan dengan travel
              br
              | plan yang sudah ada

      .column
        .columns
          column
            img.image.is-96x96(src='/assets/img/clock.png')
          column
            p.margin-lft.title-card(style=`margin-bottom:10px`) Cepat
            p.margin-lft(style=`font-size:12px`) Pilih travel plan kesukaanmu.
              br
              | Langsung berangkat

      .column
        .columns
          column
            img.image.is-96x96(src='/assets/img/shield.png')
          column
            p.margin-lft.title-card(style=`margin-bottom:10px`) Pasti Aman
            p.margin-lft(style=`font-size:12px`) Gak perlu takut lagi,
              br
              | karena  transaksimu sudah
              br
              | termasuk asuransi perjalananmu!

    .txt-cntr.margin-btn
      p.subtitle.title-card Rekomendasi buat kamu
      p.title-card Temukan rencana perjalanan yang sesuai dengan kamu!

    .columns
      .column
        .card
          .card-image
            figure.image
              img(src='/assets/img/tempat-wisata/mawar-camping-ground.jpg')
          .card-content
            .media
              .media-content
                p.title.is-5.title-card Sensasi ngopi diatas awan
                p.subtitle.is-6 3 Hari ~ Rp 3.000.000,-
                p
                  i.fas.fa-thumbs-up
                  span.title-card(style=`margin-left:20px`) 1080 like
                  i.fas.fa-plane-departure(style=`margin-left:20px`)
                  span.title-card(style=`margin-left:20px`) 2404x
            .content
              span.title-card Tempat yang dikunjungi
              br
              br
              | Pondok Kopi Umbul Sidomukti, Mawar Camping Ground, Susan Spa & Resort
            a.btn-detail.color-primary.color-text-primary.is-fullwidth.button(href='/detailtrip') Selengkapnya

      .column
        .card
          .card-image
            figure.image
              img(src='/assets/img/tempat-wisata/batu-secret-zoo.jpg')
          .card-content
            .media
              .media-content
                p.title.is-5.title-card Menikmati dinginnya pagi Batu Malang
                p.subtitle.is-6 2 Hari ~ Rp 1.800.000,-
                p
                  i.fas.fa-thumbs-up
                  span.title-card(style=`margin-left:20px`) 871 like
                  i.fas.fa-plane-departure(style=`margin-left:20px`)
                  span.title-card(style=`margin-left:20px`) 2093x
            .content
              span.title-card Tempat yang dikunjungi
              br
              br
              | Batu Secret Zoo, Batu Night Spectacular, Kusuma Agrowisata
            a.btn-detail.color-primary.color-text-primary.is-fullwidth.button(href='/detailtrip') Selengkapnya

      .column
        .card
          .card-image
            figure.image
              img(src='/assets/img/tempat-wisata/kampung-sampireun-resort.jpg')
          .card-content
            .media
              .media-content
                p.title.is-5.title-card Suasana alam perdesaan yang sejuk nan romantis
                p.subtitle.is-6 2 Hari ~ Rp 800.000,-
                p
                  i.fas.fa-thumbs-up
                  span.title-card(style=`margin-left:20px`) 506 like
                  i.fas.fa-plane-departure(style=`margin-left:20px`)
                  span.title-card(style=`margin-left:20px`) 1845x
            .content
              span.title-card Tempat yang dikunjungi
              br
              br
              | Kampung Sampireun, Gunung Papandayan, Leuwi Jurig, Danau Situ Bagendit
            a.button.btn-detail.color-primary.color-text-primary.is-fullwidth.button(href='/detailtrip') Selengkapnya

    .txt-cntr.margin-btn
      p.subtitle.title-card Kota Wisata Populer
      p.title-card Temukan rencana perjalanan terbaikmu disini!

    .columns

      .column
        a.button.city-button.home-background.bandung-link(style=`background-image:url(/assets/img/tempat-wisata/bandung-kotak-opacity.jpg)` href=`/detail-city`) Bandung

      .column
        a.button.city-button.home-background(style=`background-image:url(/assets/img/tempat-wisata/bali-kotak-opacity.jpg)` href=`/detail-city`) Bali

      .column
        a.button.city-button.home-background(style=`background-image:url(/assets/img/tempat-wisata/yogyakarta-kotak-opacity.jpg)` href=`/detail-city`) Yogyakarta

      .column
        a.button.city-button.home-background(style=`background-image:url(/assets/img/tempat-wisata/jakarta-kotak-opacity.jpg)` href=`/detail-city`) Jakarta
